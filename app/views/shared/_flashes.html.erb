<% if notice %>
  <div class="alert alert-success alert-flash alert-dismissible fade show" role="alert" data-controller="auto-dismiss">
    <%= notice %>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Fermer"></button>
  </div>
<% end %>

<% if alert %>
  <div class="alert alert-danger alert-flash alert-dismissible fade show" role="alert" data-controller="auto-dismiss">
    <%= alert %>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Fermer"></button>
  </div>
<% end %>
