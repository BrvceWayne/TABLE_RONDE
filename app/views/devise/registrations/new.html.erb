<div class="auth">
  <div class="auth__content">

    <%# Logo cliquable vers home %>
    <%= link_to root_path, class: "auth__logo" do %>
      <span class="auth__logo-left">TableR</span>
      <span class="auth__logo-icon">
        <span class="auth__logo-circle"></span>
        <span class="auth__logo-fork"></span>
        <span class="auth__logo-knife"></span>
      </span>
      <span class="auth__logo-right">nde</span>
    <% end %>

    <h1 class="auth__title">Créer un compte</h1>

    <%# Affichage des erreurs %>
    <% if resource.errors.any? %>
      <div class="auth__error">
        <% resource.errors.full_messages.each do |message| %>
          <%= message %><br>
        <% end %>
      </div>
    <% end %>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "auth__form" }) do |f| %>

      <div class="auth__field">
        <%= f.label :email, "Email", class: "auth__label" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "votre@email.com", class: "auth__input" %>
      </div>

      <div class="auth__field">
        <%= f.label :password, "Mot de passe", class: "auth__label" %>
        <%= f.password_field :password, autocomplete: "new-password", placeholder: "Minimum #{@minimum_password_length} caractères", class: "auth__input" %>
        <% if @minimum_password_length %>
          <p class="auth__hint"><%= @minimum_password_length %> caractères minimum</p>
        <% end %>
      </div>

      <div class="auth__field">
        <%= f.label :password_confirmation, "Confirmer le mot de passe", class: "auth__label" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Retapez votre mot de passe", class: "auth__input" %>
      </div>

      <%= f.submit "S'inscrire", class: "auth__submit" %>

    <% end %>

    <div class="auth__divider">
      <span>ou</span>
    </div>

    <%= link_to "Déjà un compte ? Se connecter", new_session_path(resource_name), class: "auth__cta-link" %>

  </div>
</div>
