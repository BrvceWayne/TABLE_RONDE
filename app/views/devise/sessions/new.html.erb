<div class="auth">
  <div class="auth__content">

    <%# Logo cliquable vers home %>
    <%= link_to root_path, class: "auth__logo" do %>
      <span class="auth__logo-left">TableR</span>
      <span class="auth__logo-icon">
        <span class="auth__logo-circle"></span>
        <span class="auth__logo-fork"></span>
        <span class="auth__logo-knife"></span>
      </span>
      <span class="auth__logo-right">nde</span>
    <% end %>

    <h1 class="auth__title">Connexion</h1>

    <%# Affichage des erreurs %>
    <% if alert.present? %>
      <div class="auth__error"><%= alert %></div>
    <% end %>

    <%= form_for(resource, as: resource_name, url: user_session_path, html: { class: "auth__form" }) do |f| %>

      <div class="auth__field">
        <%= f.label :email, "Email", class: "auth__label" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "votre@email.com", class: "auth__input" %>
      </div>

      <div class="auth__field">
        <%= f.label :password, "Mot de passe", class: "auth__label" %>
        <%= f.password_field :password, autocomplete: "current-password", placeholder: "Votre mot de passe", class: "auth__input" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <label class="auth__checkbox">
          <%= f.check_box :remember_me %>
          <span>Se souvenir de moi</span>
        </label>
      <% end %>

      <%= f.submit "Se connecter", class: "auth__submit" %>

    <% end %>

    <div class="auth__links">
      <% if devise_mapping.recoverable? %>
        <%= link_to "Mot de passe oublié ?", new_password_path(resource_name), class: "auth__link" %>
      <% end %>
    </div>

    <div class="auth__divider">
      <span>ou</span>
    </div>

    <% if devise_mapping.registerable? %>
      <%= link_to "Créer un compte", new_registration_path(resource_name), class: "auth__cta-link" %>
    <% end %>

  </div>
</div>
